# Definition for the kafka instance type
# Specifies which bootstrap script to run to set up this instance type and which roles
# to apply to this instance type

heat_template_version: 2014-10-16

parameters:
  Flavor:
    description: Flavor of the kafka server
    type: string
    default: ec2.m3.xlarge
  KeyName:
    description: Name of an existing ssh keypair
    type: string
  PrivateNet:
    description: Private network for pnda deployment
    type: string
  PrivateSubnet:
    description: Private network for pnda deployment
    type: string
  Image:
    type: string
  name:
    type: string
  SaltmasterIP:
    type: string
  NodeIndex:
    type: number
    default: 0
  sec_group:
    type: string
  cluster_name:
    type: string
  pnda_secgroup:
    type: string
  pnda_flavor:
    type: string
    default: standard
  logvolume_size:
    type: number
    default: 120
  kafka_logvolume_size:
    type: number
    default: 200
  signal_transport:
    type: string
  software_config_transport:
    type: string
{%if create_kafkanodes_group is equalto 1 %}
  scheduler_group_hint:
    type: string
{%endif%}


resources:
  port:
    type: OS::Neutron::Port
    properties:
      network: { get_param: PrivateNet }
      fixed_ips:
        - subnet_id: { get_param: PrivateSubnet }
      security_groups: [{ get_param: sec_group }, { get_param: pnda_secgroup }]
  install_config:
    type: OS::Heat::SoftwareConfig
    properties:
      group: script
      config:
        str_replace:
          template: {get_file: scripts/base_install.sh }
          params:
            $flavor$: { get_param: pnda_flavor }
            $master_ip$: { get_param: SaltmasterIP }
            $brokerid$: { get_param: NodeIndex}
            $pnda_cluster$: { get_param: cluster_name }
            $log_volume_id$: { get_resource: logvolume }
            $roles$: 'kafka'
            $cloudera_role$: ''
  install_deployment:
    type: OS::Heat::SoftwareDeployment
    depends_on: [ logvolume_attachment, deploy_kafkaVa ]
    properties:
      signal_transport: { get_param: signal_transport }
      config:
        get_resource: install_config
      server:
        get_resource: server

  logvolume:
    type: OS::Cinder::Volume
    properties:
      size: { get_param: logvolume_size }
      description: Volume for kafka logs

  logvolume_attachment:
    type: OS::Cinder::VolumeAttachment
    properties:
      volume_id: { get_resource: logvolume }
      instance_uuid: { get_resource: server }

  kafkalogvolume:
    type: OS::Cinder::Volume
    properties:
      size: { get_param: kafka_logvolume_size }
      description: Volume for kafka partition logs

  kafkalogvolume_attachment:
    type: OS::Cinder::VolumeAttachment
    properties:
      volume_id: { get_resource: kafkalogvolume }
      instance_uuid: { get_resource: server }

  kafkaVa_config:
    type: OS::Heat::SoftwareConfig
    properties:
      group: script
      config:
        str_replace:
          template: { get_file: scripts/kafka_install.sh }
          params:
            $kafkalog_volume_id$: { get_resource: kafkalogvolume }

  deploy_kafkaVa:
    type: OS::Heat::SoftwareDeployment
    depends_on: [ kafkalogvolume_attachment  ]
    properties:
      signal_transport: { get_param: signal_transport }
      config:
        get_resource: kafkaVa_config
      server:
        get_resource: server

  server:
    type: OS::Nova::Server
    properties:
      name: { get_param: name }
      image: { get_param: Image }
      flavor: { get_param: Flavor }
      key_name: { get_param: KeyName }
      networks:
        - port: { get_resource: port }
      software_config_transport: { get_param: software_config_transport }
      user_data_format: SOFTWARE_CONFIG
      config_drive: True
{%if create_kafkanodes_group is equalto 1 %}
      scheduler_hints: 
        group: { get_param: scheduler_group_hint}
{%endif%}

outputs:
  port_resource:
    description: Heat resource handle for the Neutron port
    value:
      { get_resource: port }
  server_resource:
    description: Heat resource handle for the Nova compute server
    value:
      {get_resource: server}
  hosts_entry:
    description: >
      Server's IP address and hostname in the /etc/hosts format
    value:
      str_replace:
        template: |
          PRIMARYIP PRIMARYHOST
        params:
          PRIMARYIP: {get_attr: [server, first_address]}
          PRIMARYHOST: {get_attr: [server, name]}
